%h3 Your credentials
%form{:action => 'scraper/store', :method => 'post'}
  = hidden_field_tag :authenticity_token, form_authenticity_token
  %input{:name => 'user[email]', :placeholder => 'Email address', :type => 'email'}/
  %br/
  %input{:name => 'user[code]', :placeholder => 'Your tracking code', :type => 'text'}/
  %br/
  %button{:type => 'submit'} Save
